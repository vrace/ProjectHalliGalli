<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Name="Window"
	Title="TitleScene"
	Width="960" Height="640" HorizontalAlignment="Left" VerticalAlignment="Top" WindowStyle="None">

	<Grid x:Name="LayoutRoot" HorizontalAlignment="Left" VerticalAlignment="Top" Width="960" Height="640">
		<Image Margin="0,0,0,0" Source="background.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top" Width="960" Height="640"/>
		<Image HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="87" Height="81" Source="button_gallery.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
			<Image.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="1" ScaleY="1"/>
					<SkewTransform AngleX="0" AngleY="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform X="30" Y="30"/>
				</TransformGroup>
			</Image.RenderTransform>
		</Image>
		<Image HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="160" Height="224" Source="card_cover.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
			<Image.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="2" ScaleY="1"/>
					<SkewTransform AngleX="0" AngleY="0"/>
					<RotateTransform Angle="0"/>
					<TranslateTransform X="100" Y="200"/>
				</TransformGroup>
			</Image.RenderTransform>
		</Image>
	</Grid>
</Window>